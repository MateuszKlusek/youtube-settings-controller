{
  "manifest_version": 3,
  "name": "YouTube Settings Controller",
  "version": "0.1.0",
  "key": "lnmgnapcoiccgcaaigeihamaidjldofa",
  "description": "Control the YouTube settings button",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/initial-data.js",
        "scripts/navigation-data.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}